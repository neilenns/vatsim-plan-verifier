{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", "schedule:weekly", "schedule:automergeWeekly"],
  "packageRules": [
    {
      "groupName": "definitelyTyped",
      "matchDepTypes": ["devDependencies"],
      "matchPackagePrefixes": ["@types/"],
      "automerge": true
    },
    {
      "groupName": "linting",
      "groupSlug": "eslint-plugin",
      "matchDepTypes": ["devDependencies"],
      "matchPackagePrefixes": ["eslint-plugin"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "groupName": "all minor and patch dependencies",
      "groupSlug": "all-minor-patch",
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "groupName": "chai",
      "groupSlug": "all-chai",
      "matchPackagePrefixes": ["chai"]
    },
    {
      "extends": "monorepo:eslint",
      "groupName": "eslint monorepo",
      "matchUpdateTypes": ["digest", "patch", "minor", "major"]
    }
  ]
}
